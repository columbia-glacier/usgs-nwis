{
  "name": "usgs-nwis",
  "title": "USGS NWIS Site Data",
  "description": "Discharge observations from nearby USGS NWIS sites.",
  "version": "0.1.0",
  "contributors": [
    {
      "title": "Ethan Welty",
      "email": "ethan.welty@gmail.com",
      "role": "author"
    }
  ],
  "sources": [
    {
      "title": "USGS National Water Information System (NWIS)",
      "path": "https://nwis.waterdata.usgs.gov/nwis/"
    }
  ],
  "resources": [
    {
      "name": "knik-river",
      "title": "15281000 Knik River, AK",
      "path": "data/knik-river.csv",
      "schema": {
        "fields": [
          {
            "name": "date",
            "type": "date",
            "description": "Date over which the values are summarized (unknown whether UTC or local time).",
            "format": "%Y-%m-%d"
          },
          {
            "name": "discharge",
            "type": "number",
            "description": "River discharge.",
            "unit": "ft3 s-1"
          }
        ]
      }
    }
  ]
}
